# poweroff
begin
    prog   = irexec
    button = KEY_POWER
    config = sudo poweroff
end

begin
    prog   = irexec
    button = QUICK_POWER
#    config = env DISPLAY=:0 | grep XDG_SESSION_TYPE=wayland && sudo ydotool key KEY_LEFTMETA+KEY_PAGEUP || xdotool key Super_L+Page_Up    
    config = sudo ydotool key 125:1 104:1 125:0 104:0
    flags  = quit
end

