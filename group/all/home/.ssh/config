Include config.d/*

## workaround. terminal title is not changing if PROMPT_COMMAND not properly configured on remote servers
# Note: there might be issues with git (ssh). if so, exclude the host
Host * !github.com
  PermitLocalCommand yes
  LocalCommand printf "\033]0;%r@%h\007"

Host f-runet
  HostName 192.168.122.18
  ForwardX11 yes
  ForwardX11Timeout 525600
#  ForwardX11Trusted yes
